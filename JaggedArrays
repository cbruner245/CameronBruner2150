public class JaggedArrays 
{
	public static void main(String[] args)
	{
		int[][] y = {
				{1,2,3},
				{4,5},
				{6}
		};
		
		int[] rowLength = new int[y.length];
		for(int i = 0; i < y.length; i++)
		{
			rowLength[i] = y[i].length;
		}
		System.out.println(Arrays.toString(rowLength));
		
